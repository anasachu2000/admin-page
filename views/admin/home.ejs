                        <button class="btn btn-outline-danger" type="submit" >Log Out</button>
                    </form>
                </ul>
            </div>
        </div>
    </nav>
</header>

<section class="vh-100" style="background-color: #faf8f8">
    <div class="container-fluid text-lg-center">
        <div class=" my-3 border-bottom border-4 border-danger fw-bold">
            <h4>Welcome <%= admin.name %></h4>
        </div>
    </div>
    <div class="container  h-100">           
        <table style="border-bottom: 1px solid black;" id="dtBasicExample" class="table table-striped table-sm mt-4 " cellspacing="0" width="100%">
            <thead>
            <tr style="background: #0000009c; color: wheat;">
                <th class="th-sm">Name
                </th>
                <th class="th-sm">Email
                </th>
                <th class="th-sm">Mobile
                </th>
            </tr>
            </thead>

            <tbody>
                <tr>
                    <td><%= admin.name %></td>
                    <td><%= admin.email %></td>
                    <td><%= admin.mobile %></td>
                </tr>
            </tbody>
            
        </table>
    </div>
</section>


<!-- header section end -->
